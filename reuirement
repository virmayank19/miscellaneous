# Function to calculate percentage change
def calculate_percentage_change(old_number, new_number):
    try:
        # Convert input to float to handle decimal values
        old_number = float(old_number)
        new_number = float(new_number)
        
        # Calculate the percentage change
        percentage_change = ((new_number - old_number) / abs(old_number)) * 100
        
        return percentage_change
    except ZeroDivisionError:
        # Handle the case where old_number is 0
        return "Old number cannot be zero."

# Example usage
old_value = 50
new_value = 75
percentage_change = calculate_percentage_change(old_value, new_value)
print(f"The percentage change is {percentage_change}%")

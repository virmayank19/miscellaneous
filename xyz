import json

def parse_json(data):
  """
  Parses a JSON object and returns a dictionary containing the "name": "description" pairs for each object in the list.

  Args:
      data: A JSON object.

  Returns:
      A dictionary containing the "name": "description" pairs for each object in the list.
  """
  result = {}
  for item in data:
    result[item["name"]] = item["description"]
  return result

# Example usage
with open("input.json") as f:
  data = json.load(f)

parsed_data = parse_json(data)

for key, value in parsed_data.items():
  print(f"{key}: {value}")
